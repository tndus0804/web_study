package iotest;

import java.io.FileReader;

public class FileReaderTest1 {
	
	public static void main(String[] args) throws Exception {
		FileReader fr = new FileReader("test.txt");
		int ch = 0;
		System.out.println((char)fr.read());
		System.out.println((char)fr.read());
		System.out.println((char)fr.read());
		System.out.println((char)fr.read());
		System.out.println((char)fr.read());
		System.out.println((char)fr.read());
		
		while(true) {
			ch = fr.read();
			if(ch == -1) break;
			System.out.print((char) ch);
		}
		
	} // main
	
} // class

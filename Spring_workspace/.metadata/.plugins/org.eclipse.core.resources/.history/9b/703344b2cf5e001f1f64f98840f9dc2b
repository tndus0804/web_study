<!DOCTYPE html>
<html xmlns:th="www.thymeleaf.org"
	  xmlns:sec="http://thymeleaf.org/extras/spring-security">
<head>
	<meta charset="UTF-8">
	<title>글 수정</title>
	<link rel="stylesheet" th:href="@{/css/main.css}">
	<script th:src="@{/js/jquery-3.7.1.min.js}"></script>
	<script>
		$(document).ready(function(){
			$('#updateForm').submit(function() {
				if($('#title').val().length < 5) {
					alert("제목을 5자 이상 작성해주세요.");
					$('#title').focus();
					$('#title').select();
					return false;
				}
				if($('#contents').val().length < 5) {
					alert("내용을 5자 이상 작성해주세요.");
					$('#contents').focus();
					$('#contents').select();
					return false;
				}
				return true;
			});
		});
	</script>
</head>
<body>
	<header>
		<h1>[ 글수정 ]</h1>
	</header>
	
	<section>
		<form id="updateForm" th:action="@{/board/update/}" method="post" 
				enctype="multipart/form-data">
			<input type="hidden" name="boardNum" th:value="${board.boardNum}">
			<table>
				<tr>
					<th>제목</th>
					<td>
						<input type="text" name="title" id="title" style="width:400px" th:if="${board != null}" th:value="${board.title}">
					</td>
				</tr>
				<tr>
					<th>내용</th>
					<td>
						<textarea name="contents" id="contents" th:if="${board != null}" th:text="${board.contents}"></textarea>
					</td>
				</tr>
				<tr>
					<th>파일첨부</th>
					<td>
						<input type="file" name="upload"><span th:if="${board != null}" th:text="${board.originalName}" style="float:right"></span>
					</td>
				</tr>
				<tr>
					<td colspan="2" class="white center">
						<input type="submit" name="file" value="저장">
					</td>
				</tr>
			</table>
		</form>
	</section>
	


</body>
</html>